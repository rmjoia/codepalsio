{
  "name": "codepals",
  "version": "0.1.0",
  "description": "CodePals.io - Code Penpals Platform",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,astro,css,md}",
    "format:check": "prettier --check src/**/*.{js,jsx,ts,tsx,astro,css,md}",
    "audit": "npm audit --audit-level=moderate",
    "audit:report": "npm audit --json > audit-report.json && echo 'Audit report saved to audit-report.json'",
    "snyk:check": "snyk test --severity-threshold=high 2>/dev/null || echo 'Snyk check skipped (requires auth in CI/CD)'",
    "security": "npm run audit",
    "validate": "npm run format:check && npm run lint && npm run audit && npm run build"
  },
  "dependencies": {
    "astro": "^5.15.8"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "postcss": "^8.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "snyk": "^1.1300.2",
    "tailwindcss": "^3.3.0"
  }
}
