---
// Footer component
---

<footer class="bg-slate-900 text-slate-400 py-12">
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<!-- Footer Grid -->
		<div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
			<!-- Brand -->
			<div>
				<div class="flex items-center gap-2 mb-4">
					<img src="/codepals00.jpg" alt="CodePals Logo" class="w-10 h-10 rounded-lg" />
					<span class="text-xl font-bold text-white">CodePals</span>
				</div>
				<p class="text-sm text-slate-500">Connecting developers, fostering growth.</p>
			</div>
			<!-- Product -->
			<div>
				<h4 class="text-white font-semibold mb-4">Product</h4>
				<ul class="space-y-2 text-sm">
					<li><a href="#features" class="hover:text-primary-400 transition-colors">Features</a></li>
					<li>
						<a href="#how-it-works" class="hover:text-primary-400 transition-colors">How It Works</a
						>
					</li>
					<li><span class="opacity-50 cursor-not-allowed">Pricing (Coming Soon)</span></li>
					<li><span class="opacity-50 cursor-not-allowed">Blog (Coming Soon)</span></li>
				</ul>
			</div>

			<!-- Community -->
			<div>
				<h4 class="text-white font-semibold mb-4">Community</h4>
				<ul class="space-y-2 text-sm">
					<li>
						<a
							href="https://github.com/codepalsio/codepalsio"
							target="_blank"
							rel="noopener noreferrer"
							class="hover:text-primary-400 transition-colors"
						>
							GitHub
						</a>
					</li>
					<li>
						<a
							href="https://discord.gg/nhyzGV7u"
							target="_blank"
							rel="noopener noreferrer"
							class="hover:text-primary-400 transition-colors"
						>
							Discord
						</a>
					</li>
					<li><span class="opacity-50 cursor-not-allowed">Events (Coming Soon)</span></li>
				</ul>
			</div>
			<!-- Legal -->
			<div>
				<h4 class="text-white font-semibold mb-4">Legal</h4>
				<ul class="space-y-2 text-sm">
					<li>
						<button
							class="hover:text-primary-400 transition-colors text-left"
							onclick="toggleModal('privacy-modal')"
						>
							Privacy Policy
						</button>
					</li>
					<li>
						<button
							class="hover:text-primary-400 transition-colors text-left"
							onclick="toggleModal('terms-modal')"
						>
							Terms of Service
						</button>
					</li>
					<li>
						<button
							class="hover:text-primary-400 transition-colors text-left"
							onclick="toggleModal('coc-modal')"
						>
							Code of Conduct
						</button>
					</li>
				</ul>
			</div>
		</div>

		<!-- Divider -->
		<div class="border-t border-slate-800 my-8"></div>

		<!-- Bottom Section -->
		<div class="flex flex-col md:flex-row items-center justify-between">
			<p class="text-sm text-slate-500 mb-4 md:mb-0">
				© 2025 CodePals.io. Connected by our ❤️ for code, a shared vision and purpose.
			</p>

			<!-- Social Links -->
			<div class="flex items-center gap-6">
				<a
					href="https://github.com/codepalsio"
					class="hover:text-primary-400 transition-colors"
					aria-label="GitHub"
				>
