---
// Header/Navigation component
---

<header
	class="sticky top-0 z-50 w-full bg-white/95 backdrop-blur-md shadow-sm transition-all duration-300"
>
	<nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
		<a href="/" class="flex items-center gap-2">
			<img src="/codepals00.jpg" alt="CodePals Logo" class="w-10 h-10 rounded-lg" />
			<span class="text-xl font-bold text-slate-900">CodePals</span>
		</a>

		<div class="hidden md:flex items-center gap-8">
			<a href="/#features" class="text-slate-600 hover:text-primary-500 transition-colors"
				>Features</a
			>
			<a href="/#how-it-works" class="text-slate-600 hover:text-primary-500 transition-colors"
				>How It Works</a
			>
			<a href="/#mission" class="text-slate-600 hover:text-primary-500 transition-colors">Mission</a
			>
		</div>

		<!-- Desktop auth menu -->
		<div id="auth-menu" class="hidden md:flex items-center gap-4">
			<!-- Will be populated by script -->
		</div>

		<!-- Mobile hamburger button -->
		<button id="mobile-menu-btn" class="md:hidden p-2" aria-label="Toggle menu">
			<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M4 6h16M4 12h16M4 18h16"></path>
			</svg>
		</button>
	</nav>

	<!-- Mobile menu -->
	<div id="mobile-menu" class="hidden md:hidden bg-white border-t border-slate-200">
		<div class="px-4 py-3 space-y-2">
			<a href="/#features" class="block text-slate-600 hover:text-primary-500 py-2">Features</a>
			<a href="/#how-it-works" class="block text-slate-600 hover:text-primary-500 py-2">How It Works</a>
			<a href="/#mission" class="block text-slate-600 hover:text-primary-500 py-2">Mission</a>
			<hr class="my-2" />
			<div id="mobile-auth" class="space-y-2"></div>
		</div>
	</div>
</header>

<script is:inline>
	(async () => {
		const authMenu = document.getElementById('auth-menu');
		const mobileAuth = document.getElementById('mobile-auth');
		const mobileMenuBtn = document.getElementById('mobile-menu-btn');
		const mobileMenu = document.getElementById('mobile-menu');

		// Toggle mobile menu
		mobileMenuBtn?.addEventListener('click', () => {
			mobileMenu?.classList.toggle('hidden');
		});

		try {
			const response = await fetch('/.auth/me');
			if (response.ok) {
				const data = await response.json();
				const user = data.clientPrincipal;

				if (user) {
					// Extract username from userDetails or use a default
					const username = user.userDetails || 'User';
					const avatarUrl = `https://avatars.githubusercontent.com/${username}?v=4`;

					const desktopHTML = `
						<div class="flex items-center gap-3 px-4 py-2 rounded-lg">
							<img src="${avatarUrl}" alt="${username} avatar" class="w-10 h-10 rounded-full border-2 border-primary-200" />
							<div>
								<p class="text-sm font-medium text-slate-900">@${username}</p>
								<p class="text-xs text-slate-500">Signed in</p>
							</div>
						</div>
						<div class="relative group">
							<button class="p-2 hover:bg-slate-100 rounded-lg transition-colors" aria-label="User menu">
								<svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
								</svg>
							</button>
							<div class="absolute right-0 mt-1 w-48 bg-white rounded-lg shadow-lg border border-slate-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
								<a href="/profile" class="flex items-center gap-3 px-4 py-2 text-slate-700 hover:bg-slate-50 rounded-t-lg">
									<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
									</svg>
									My Profile
								</a>
								<button onclick="openDeleteDialog()" class="flex items-center gap-3 px-4 py-2 text-red-600 hover:bg-red-50 w-full text-left">
									<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
									</svg>
									Delete Account
								</button>
								<a href="/.auth/logout" class="flex items-center gap-3 px-4 py-2 text-slate-700 hover:bg-slate-50 rounded-b-lg">
									<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
									</svg>
									Sign Out
								</a>
							</div>
						</div>
					`;

					const mobileHTML = `
						<div class="flex items-center gap-2 px-3 py-2">
							<img src="${avatarUrl}" alt="${username} avatar" class="w-8 h-8 rounded-full border-2 border-primary-200" />
							<div>
								<p class="text-sm font-medium text-slate-900">@${username}</p>
								<p class="text-xs text-slate-500">Signed in</p>
							</div>
						</div>
						<hr class="my-2" />
						<a href="/profile" class="flex items-center gap-3 px-4 py-2 text-slate-700 hover:bg-slate-50 rounded-lg">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
							</svg>
							My Profile
						</a>
						<button onclick="openDeleteDialog()" class="flex items-center gap-3 px-4 py-2 text-red-600 hover:bg-red-50 w-full text-left rounded-lg">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
							</svg>
							Delete Account
						</button>
						<a href="/.auth/logout" class="flex items-center gap-3 px-4 py-2 text-slate-700 hover:bg-slate-50 rounded-lg">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
							</svg>
							Sign Out
						</a>
					`;

					if (authMenu) authMenu.innerHTML = desktopHTML;
					if (mobileAuth) mobileAuth.innerHTML = mobileHTML;
				} else {
					renderSignIn();
				}
			} else {
				renderSignIn();
			}
		} catch (error) {
			console.error('Error fetching auth info:', error);
			renderSignIn();
		}

		function renderSignIn() {
			const desktopHTML = `
				<a href="/.auth/login/github" class="btn-primary flex items-center gap-2">
					<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
						<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
					</svg>
					Sign In
				</a>
			`;

			const mobileHTML = `
				<a href="/.auth/login/github" class="block w-full px-4 py-2 text-center bg-primary-500 text-white rounded-lg hover:bg-primary-600">
					Sign In with GitHub
				</a>
			`;

			if (authMenu) authMenu.innerHTML = desktopHTML;
			if (mobileAuth) mobileAuth.innerHTML = mobileHTML;
		}

		// Delete account dialog functions with enhanced confirmation
		window.openDeleteDialog = function() {
			const modal = document.createElement('div');
			modal.id = 'delete-modal';
			modal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4';
			modal.innerHTML = `
				<div class="bg-white rounded-lg shadow-xl max-w-md w-full">
					<div class="bg-red-50 border-b border-red-200 px-6 py-4">
						<div class="flex items-center gap-3">
							<svg class="w-6 h-6 text-red-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4v.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
							<h2 class="text-2xl font-bold text-red-900">Delete Your Account?</h2>
						</div>
					</div>
					
					<div class="px-6 py-6 space-y-4">
						<p class="text-slate-700 font-semibold">This action cannot be undone.</p>
						
						<div class="bg-red-50 border border-red-200 rounded-lg p-4 space-y-2">
							<p class="text-sm font-semibold text-red-900">This will:</p>
							<ul class="text-sm text-red-800 space-y-1 ml-4">
								<li>✕ Delete your profile and all personal data</li>
								<li>✕ Remove you from the CodePals platform</li>
								<li>✕ Permanently revoke your authentication</li>
								<li>✕ Immediately log you out</li>
							</ul>
						</div>
						
						<div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
							<p class="text-sm text-blue-900"><strong>Recovery window:</strong> You have <strong>90 days</strong> to contact support to recover your account. After 90 days, deletion is permanent.</p>
						</div>
					</div>
					
					<div class="px-6 py-4 border-t border-slate-200 flex gap-3">
						<button onclick="closeDeleteDialog()" class="flex-1 px-4 py-2 border border-slate-300 text-slate-700 rounded-lg hover:bg-slate-50 transition-colors font-medium">
							Cancel - Keep My Account
						</button>
						<button onclick="deleteAccount()" class="flex-1 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors font-medium cursor-pointer">
							Yes, Delete Permanently
						</button>
					</div>
					
					<div class="px-6 py-3 bg-slate-50 border-t border-slate-200 rounded-b-lg">
						<p class="text-xs text-slate-500 text-center">By confirming, you're requesting permanent deletion of your CodePals account.</p>
					</div>
				</div>
			`;
			
			// Close on background click
			modal.addEventListener('click', (e) => {
				if (e.target === modal) closeDeleteDialog();
			});
			
			document.body.appendChild(modal);
		};

		window.closeDeleteDialog = function() {
			const modal = document.getElementById('delete-modal');
			if (modal) {
				modal.remove();
			}
		};

		window.deleteAccount = async function() {
			try {
				// Get the delete button and disable it
				const deleteBtn = event.target;
				const originalText = deleteBtn.textContent;
				deleteBtn.disabled = true;
				deleteBtn.textContent = '⏳ Deleting...';

				const authResponse = await fetch('/.auth/me');
				const authData = await authResponse.json();
				const userId = authData.clientPrincipal?.userId;

				if (!userId) {
					alert('Unable to identify user. Please try again.');
					deleteBtn.disabled = false;
					deleteBtn.textContent = originalText;
					return;
				}

				const response = await fetch('/api/account/delete', {
					method: 'POST',
					headers: { 'Content-Type': 'application/json' },
					body: JSON.stringify({ userId }),
				});

				if (response.ok) {
					const data = await response.json();
					// Show confirmation before redirect
					deleteBtn.textContent = '✓ Account deleted';
					deleteBtn.className = deleteBtn.className.replace('bg-red-600', 'bg-green-600').replace('hover:bg-red-700', 'hover:bg-green-700');
					
					// Redirect to logout after a short delay
					setTimeout(() => {
						window.location.href = '/.auth/logout?post_logout_redirect_uri=/';
					}, 1500);
				} else {
					const error = await response.json();
					alert('Failed to delete account: ' + (error.error || 'Unknown error'));
					deleteBtn.disabled = false;
					deleteBtn.textContent = originalText;
					closeDeleteDialog();
				}
			} catch (error) {
				console.error('Error deleting account:', error);
				alert('Failed to delete account. Please try again.');
				const deleteBtn = event.target;
				deleteBtn.disabled = false;
				deleteBtn.textContent = 'Yes, Delete Permanently';
				closeDeleteDialog();
			}
		};
	})();
</script>
