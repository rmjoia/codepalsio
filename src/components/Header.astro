---
// Header/Navigation component
import jwt from 'jsonwebtoken';

const sessionCookie = Astro.cookies.get('session');
const isSignedIn = !!sessionCookie?.value;

// Decode JWT to get actual user info
let username = 'User';
let avatarUrl = '';

if (sessionCookie?.value) {
	try {
		const jwtSecret = import.meta.env.JWT_SECRET;
		const payload = jwt.verify(sessionCookie.value, jwtSecret) as {
			githubUsername: string;
			avatarUrl: string;
		};
		username = payload.githubUsername;
		avatarUrl = payload.avatarUrl;
	} catch (error) {
		console.error('Failed to decode session token:', error);
	}
}
---

<header
	class="sticky top-0 z-50 w-full bg-white/95 backdrop-blur-md shadow-sm transition-all duration-300"
>
	<nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
		<a href="/" class="flex items-center gap-2">
			<img src="/codepals00.jpg" alt="CodePals Logo" class="w-10 h-10 rounded-lg" />
			<span class="text-xl font-bold text-slate-900">CodePals</span>
		</a>

		<div class="hidden md:flex items-center gap-8">
			<a href="/#features" class="text-slate-600 hover:text-primary-500 transition-colors"
				>Features</a
			>
			<a href="/#how-it-works" class="text-slate-600 hover:text-primary-500 transition-colors"
				>How It Works</a
			>
			<a href="/#mission" class="text-slate-600 hover:text-primary-500 transition-colors">Mission</a
			>
		</div>

		<div class="flex items-center gap-4">
			{
				!isSignedIn ? (
					<a
						href="/.auth/login/github"
						class="btn-primary flex items-center gap-2"
						onclick="this.innerHTML='<svg class=\'w-4 h-4 animate-spin\' fill=\'none\' viewBox=\'0 0 24 24\'><circle class=\'opacity-25\' cx=\'12\' cy=\'12\' r=\'10\' stroke=\'currentColor\' stroke-width=\'4\'></circle><path class=\'opacity-75\' fill=\'currentColor\' d=\'M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z\'></path></svg> Signing in...'; this.classList.add('pointer-events-none', 'opacity-75');"
					>
						<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
						</svg>
						Sign In
					</a>
				) : (
					<div class="relative" id="user-menu-container">
						<button
							id="user-menu-button"
							class="flex items-center gap-2 px-4 py-2 rounded-lg hover:bg-slate-100 transition-colors"
							aria-label="User menu"
							aria-expanded="false"
						>
							{avatarUrl ? (
								<img src={avatarUrl} alt={username} class="w-8 h-8 rounded-full" />
							) : (
								<div class="w-8 h-8 rounded-full bg-primary-500 text-white flex items-center justify-center font-semibold">
									{username.charAt(0).toUpperCase()}
								</div>
							)}
							<span class="hidden md:inline text-slate-900 font-medium">@{username}</span>
							<svg
								class="w-4 h-4 text-slate-600"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M19 9l-7 7-7-7"
								/>
							</svg>
						</button>

						<div
							id="user-menu-dropdown"
							class="hidden absolute right-0 mt-2 w-64 bg-white rounded-xl shadow-2xl border border-slate-200 py-2 z-50"
						>
							<div class="px-4 py-3 border-b border-slate-200">
								<p class="text-sm font-semibold text-slate-900">@{username}</p>
								<p class="text-xs text-slate-500">Signed in with GitHub</p>
							</div>

							<a
								href="/profile"
								class="flex items-center gap-3 px-4 py-2 hover:bg-slate-50 transition-colors text-slate-700"
							>
								<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
									/>
								</svg>
								My Profile
							</a>

							<div class="border-t border-slate-200 my-2" />

							<a
								href="/profile/data"
								class="flex items-center gap-3 px-4 py-2 hover:bg-slate-50 transition-colors text-slate-700"
							>
								<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
									/>
								</svg>
								Download My Data
							</a>

							<div class="border-t border-slate-200 my-2" />

							<button
								onclick="if(confirm('Are you sure you want to delete your account? This action cannot be undone.')) window.location.href='/api/account/delete'"
								class="flex items-center gap-3 px-4 py-2 hover:bg-red-50 transition-colors text-red-600 w-full text-left"
							>
								<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
									/>
								</svg>
								Delete Account
							</button>

							<div class="border-t border-slate-200 my-2" />

							<a
								href="/.auth/logout"
								class="flex items-center gap-3 px-4 py-2 hover:bg-slate-50 transition-colors text-slate-700"
							>
								<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
									/>
								</svg>
								Sign Out
							</a>
						</div>
					</div>
				)
			}
		</div>

		<button class="md:hidden p-2" aria-label="Toggle menu">
			<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M4 6h16M4 12h16M4 18h16"></path>
			</svg>
		</button>
	</nav>
</header>

<script>
	// User menu dropdown toggle
	const menuButton = document.getElementById('user-menu-button');
	const menuDropdown = document.getElementById('user-menu-dropdown');

	if (menuButton && menuDropdown) {
		menuButton.addEventListener('click', (e) => {
			e.stopPropagation();
			menuDropdown.classList.toggle('hidden');
			menuButton.setAttribute(
				'aria-expanded',
				menuDropdown.classList.contains('hidden') ? 'false' : 'true'
			);
		});

		// Close dropdown when clicking outside
		document.addEventListener('click', (e) => {
			const target = e.target as Node;
			if (!menuButton.contains(target) && !menuDropdown.contains(target)) {
				menuDropdown.classList.add('hidden');
				menuButton.setAttribute('aria-expanded', 'false');
			}
		});

		// Close on escape key
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape' && !menuDropdown.classList.contains('hidden')) {
				menuDropdown.classList.add('hidden');
				menuButton.setAttribute('aria-expanded', 'false');
			}
		});
	}
</script>
