---
// Call to Action section
import jwt from 'jsonwebtoken';

const sessionCookie = Astro.cookies.get('session');
const isSignedIn = !!sessionCookie?.value;
---

<section
	id="mission"
	class="py-20 sm:py-32 bg-gradient-to-br from-slate-900 via-primary-900 to-slate-900 relative overflow-hidden"
>
	<!-- Animated background -->
	<div class="absolute inset-0 overflow-hidden">
		<div class="absolute -top-40 -right-40 w-80 h-80 bg-primary-500/10 rounded-full blur-3xl"></div>
		<div class="absolute -bottom-40 -left-40 w-80 h-80 bg-accent-500/10 rounded-full blur-3xl">
		</div>
	</div>

	<div class="relative mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
		<h2 class="text-4xl sm:text-5xl font-bold text-white mb-6">Our Mission</h2>

		<p class="text-lg text-slate-300 mb-12 max-w-3xl mx-auto leading-relaxed">
			CodePals exists to create a space where developers can find genuine connection and mentorship.
			We believe in breaking down barriers in techâ€”no gatekeeping, no egos, just real human
			connection and shared growth. Our goal is to build a platform that makes a positive impact on
			everyone's lives by fostering meaningful relationships and helping developers at all levels
			grow together.
		</p>

		<!-- CTA Buttons -->
		<div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12">
			{
				!isSignedIn ? (
					<a
						href="/#how-it-works"
						class="px-8 py-4 bg-accent-500 text-white rounded-lg font-semibold hover:bg-accent-600 transition-colors"
					>
						Start for Free
					</a>
				) : (
					<a
						href="/profile"
						class="px-8 py-4 bg-accent-500 text-white rounded-lg font-semibold hover:bg-accent-600 transition-colors"
					>
						Go to Profile
					</a>
				)
			}
			<a
				href="https://github.com/rmjoia/codepalsio"
				target="_blank"
				rel="noopener noreferrer"
				class="px-8 py-4 bg-white/10 text-white border border-white/20 rounded-lg font-semibold hover:bg-white/20 transition-colors backdrop-blur"
			>
				View on GitHub
			</a>
			<a
				href="https://discord.gg/nhyzGV7u"
				target="_blank"
				rel="noopener noreferrer"
				class="px-8 py-4 bg-white/10 text-white border border-white/20 rounded-lg font-semibold hover:bg-white/20 transition-colors backdrop-blur"
			>
				Join Discord
			</a>
		</div>
	</div>
</section>
