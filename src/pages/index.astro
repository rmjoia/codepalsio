---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import HowItWorks from '../components/HowItWorks.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
import PrivacyModal from '../components/PrivacyModal.astro';
import TermsModal from '../components/TermsModal.astro';
import CodeOfConductModal from '../components/CodeOfConductModal.astro';
import SponsorshipModal from '../components/SponsorshipModal.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="CodePals.io - Code 'Penpals' Platform. Connect with developers, grow through mentorship, and build meaningful relationships."
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="theme-color" content="#00bcd4" />

		<!-- Preconnect to external resources -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

		<!-- Google Fonts -->
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Clash+Display:wght@600;700&display=swap"
			rel="stylesheet"
		/>

		<title>CodePals.io - Connect with Code 'Penpals'</title>
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" sizes="192x192" href="/favicon-192.png" />
		<link rel="icon" type="image/png" sizes="512x512" href="/favicon-512.png" />

		<!-- Open Graph / Social Media -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://codepals.io/" />
		<meta property="og:title" content="CodePals.io - Code 'Penpals' Platform" />
		<meta
			property="og:description"
			content="Connect with developers, grow through mentorship, and build meaningful relationships."
		/>
		<meta property="og:image" content="https://codepals.io/og-image.png" />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://codepals.io/" />
		<meta property="twitter:title" content="CodePals.io - Code 'Penpals' Platform" />
		<meta
			property="twitter:description"
			content="Connect with developers, grow through mentorship, and build meaningful relationships."
		/>
		<meta property="twitter:image" content="https://codepals.io/twitter-image.png" />
	</head>
	<body class="bg-white">
		<Header />
		<Hero />
		<Features />
		<HowItWorks />
		<CTA />
		<Footer />

		<!-- Legal Modals -->
		<PrivacyModal />
		<TermsModal />
		<CodeOfConductModal />
		<SponsorshipModal />

		<script is:inline>
			// Smooth scroll for anchor links (both #section and /#section)
			document.querySelectorAll('a[href^="#"], a[href^="/#"]').forEach((anchor) => {
				anchor.addEventListener('click', function (e) {
					const href = this.getAttribute('href');
					const hash = href.startsWith('/#') ? href.substring(1) : href;
					const target = document.querySelector(hash);

					if (target) {
						e.preventDefault();
						target.scrollIntoView({ behavior: 'smooth' });
						// Update URL hash without jumping
						history.pushState(null, null, hash);
					}
				});
			});

			// Scroll to hash on page load
			window.addEventListener('load', () => {
				if (window.location.hash) {
					const target = document.querySelector(window.location.hash);
					if (target) {
						setTimeout(() => {
							target.scrollIntoView({ behavior: 'smooth' });
						}, 100);
					}
				}
			});

			// Navbar shadow enhancement on scroll
			window.addEventListener('scroll', () => {
				const header = document.querySelector('header');
				if (window.scrollY > 10) {
					header?.classList.add('shadow-lg');
					header?.classList.remove('shadow-sm');
				} else {
					header?.classList.remove('shadow-lg');
					header?.classList.add('shadow-sm');
				}
			});
		</script>
	</body>
</html>
